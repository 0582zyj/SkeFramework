<!-- /.content -->
<script>
        var vm = new Vue({
            el: '#section-content',
            data: {
                getDataStatisticalUrl: "@Url.Action("GetDataStatistical", "Home")",
                dataItem: {},
            },
            created: function () {
                this.GetDataStatistical();
            },
            methods: {
                GetDataStatistical: function () {
                    var _self = this;
                    _self.dataItem = {};
                    axios.get(this.getDataStatisticalUrl)
                   .then(function (response) {
                       if (response.status == 200) {
                           _self.dataItem = response.data;
                       }
                   })
                   .catch(function (error) {
                       console.log(error);
                   });
                }
            }
        });

</script>
