@{
    ViewBag.Title = "修改";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>PsPlatform修改</h1>
    <ol class="breadcrumb">
        <li><a href="@Url.Action("Index","Home")"><i class="fa fa-home"></i> 主页</a></li>
        <li><a href="@Url.Action("PsPlatformList","PsPlatform")"><i class="fa fa-bar-chart"></i> PsPlatform管理</a></li>
    </ol>
</section>
<!-- Main content -->
<section class="content" id="section-content">
    <div class="row">
        <div class="col-md-12">
            <div class="nav-tabs-custom">
                <ul class="nav nav-tabs">
                    <li class="active"><a href="#profile" data-toggle="tab" aria-expanded="true">基本信息</a></li>
                </ul>
                <div class="tab-content">
                    <div class="tab-pane active" id="profile">
                        <form class="form-horizontal">
                            <div class="form-group">
                                <label for="id" class="col-sm-2 control-label">ID</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" name="id" id="id" v-model="dataItem.id" required maxlength="200" placeholder="ID">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="PlatformNo" class="col-sm-2 control-label">角色编号</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" name="PlatformNo" id="PlatformNo" v-model="dataItem.PlatformNo" required maxlength="200" placeholder="角色编号">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="Name" class="col-sm-2 control-label">权限编号</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" name="Name" id="Name" v-model="dataItem.Name" required maxlength="120" placeholder="权限编号">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="DefaultUserName" class="col-sm-2 control-label">DefaultUserName</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" name="DefaultUserName" id="DefaultUserName" v-model="dataItem.DefaultUserName" required maxlength="120" placeholder="DefaultUserName">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="DefaultUserNo" class="col-sm-2 control-label">DefaultUserNo</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" name="DefaultUserNo" id="DefaultUserNo" v-model="dataItem.DefaultUserNo" required maxlength="120" placeholder="DefaultUserNo">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="InputUser" class="col-sm-2 control-label">操作员</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" name="InputUser" id="InputUser" v-model="dataItem.InputUser" required maxlength="10" placeholder="操作员">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="InputTime" class="col-sm-2 control-label">操作时间</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" name="InputTime" id="InputTime" v-model="dataItem.InputTime" required maxlength="200" placeholder="操作时间">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="UpdateTime" class="col-sm-2 control-label">更新时间</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" name="UpdateTime" id="UpdateTime" v-model="dataItem.UpdateTime" required maxlength="200" placeholder="更新时间">
                                </div>
                            </div>
                            <input type="hidden" name="token" value="5cbd303f221a626ce0f404cec31b4ea4">
                            <div class="form-group">
                                <div class="col-sm-offset-2 col-sm-10">
                                    <button type="button" class="btn btn-default" v-on:click="submit()">保存</button>
                                </div>
                            </div>
                        </form>
                    </div>
                    <!-- /.tab-pane -->
                </div>
                <!-- /.tab-content -->
            </div>
            <!-- /.nav-tabs-custom -->
        </div>
    </div>
</section>
<script>
        var vm = new Vue({
            el: "#section-content",
            data: {
                listJumpUrl: "@Url.Action("PlatformList", "Platform")",
                updatePostUrl: "@Url.Action("PsPlatformUpdate", "Platform")",
                getItemUrl: "@Url.Action("GetPsPlatformInfo", "Platform")",
                dataItem: {},
                id:"@Request.QueryString["id"].ToString()"
            },
            created: function () {
                this.Init();
            },
            methods: {
                Init: function () {
                    var _self = this;
                    _self.dataItem = {};
                    axios.get(this.getItemUrl,{ params: {id: this.id } } )
                     .then(function (response) {
                         if (response.status == 200) {
                             _self.dataItem = response.data;
                         }
                     })
                     .catch(function (error) {
                         console.log(error);
                     });
                },
                submit: function () {
                    var _self = this;
                    axios.post(this.updatePostUrl, this.dataItem)
                     .then(function (response) {
                         if (response.status == 200) {
                             alert(response.data.ResultMsg);
                             if (response.data.ResultCode == 200) {
                                 window.location.href = _self.listJumpUrl;
                             }
                         }
                     })
                     .catch(function (error) {
                         console.log(error);
                     });
                },
            }
        });
</script>

